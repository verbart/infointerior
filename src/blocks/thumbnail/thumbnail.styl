.thumbnail
  margin-top 15px
  margin-bottom 15px
  padding 15px
  background #fff
  &__image
    height 240px
    background-position center
    background-size cover
    background-repeat no-repeat
  &__caption
    margin-top 10px
    font-weight 600
  &__link
    text-decoration none
    color #bebebe
    font-size 14px
  &__readmore
    color #333
    text-decoration underline
    cursor pointer
