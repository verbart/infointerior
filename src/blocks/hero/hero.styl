.hero
    margin-top 65px
    display flex
    align-items center
    @media (max-width 992px)
        margin-top 56px
    &__slide
        padding 30px
        display flex
        align-items center
        min-height 500px
        background-position center
        background-size cover
        background-repeat no-repeat
    &__info
        max-width 700px
        padding 30px
        background rgba(#fff, .5)
    &__caption
    &__description
        color #333
