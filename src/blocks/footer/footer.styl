.footer
  display flex
  flex-direction column
  background #333
  color #fff
  text-align center
  padding 15px
  &__info, &__copyright
    display flex
    justify-content space-around
    align-items center
    @media (max-width 992px)
      flex-direction column
  &__info
    margin-bottom 30px
    font-size 14px
    > *
      width 30%
      @media (max-width 992px)
        width 100%
  h1
    font-size 20px
    margin-top 10px
    margin-bottom 10px
  &__copyright
    width 100%
    font-size 16px
    color #888
